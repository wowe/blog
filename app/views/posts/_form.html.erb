<%= form_for :post, url: posts_path do |f| %>
    <% if @post.nil? %>
    <% else %>
        <% if @post.errors.any? %>
            <div id="errorExplanation">
                <h2><%= pluralize(@post.errors.count, "error") %> prohibitet this post from being saved:</h2>
                <ul>
                    <% @post.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    <% end %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
